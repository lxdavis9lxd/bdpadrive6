<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-0">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <img src="/images/logo.png" alt="BDPA Logo" height="48" class="mb-3">
                    <h3 class="fw-normal text-dark">Set New Password</h3>
                    <p class="text-muted">Choose a strong password for your account</p>
                </div>
                
                <% if (error) { %>
                    <div class="alert alert-danger border-0 bg-danger bg-opacity-10 text-danger">
                        <i class="fas fa-exclamation-circle me-2"></i><%= error %>
                    </div>
                <% } %>
                
                <form method="POST" action="/auth/reset-password/<%= token %>">
                    <div class="mb-3">
                        <label for="password" class="form-label text-dark fw-medium">New Password</label>
                        <input type="password" class="form-control form-control-lg border-0 bg-light" 
                               id="password" name="password" required
                               placeholder="Enter your new password">
                        <div class="form-text small text-muted">
                            Must contain uppercase, lowercase, number, and special character
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label for="confirmPassword" class="form-label text-dark fw-medium">Confirm New Password</label>
                        <input type="password" class="form-control form-control-lg border-0 bg-light" 
                               id="confirmPassword" name="confirmPassword" required
                               placeholder="Confirm your new password">
                    </div>
                    
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg py-3 fw-medium">
                            Reset Password
                        </button>
                    </div>
                </form>
                
                <div class="text-center">
                    <p class="text-muted mb-0">
                        <a href="/auth/login" class="text-primary text-decoration-none fw-medium">Back to Sign In</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
